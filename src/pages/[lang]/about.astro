---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'zh' } },
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as 'en' | 'zh');

const skills = [
  { category: 'Engines', items: ['Unity', 'Unreal Engine 5', 'Godot'] },
  { category: 'Languages', items: ['C#', 'C++', 'Lua', 'Python', 'TypeScript'] },
  { category: 'Design', items: ['System Design', 'Level Design', 'Combat Design', 'Economy Balancing'] },
  { category: 'Tools', items: ['Jira', 'Confluence', 'Figma', 'Excel/VBA'] },
];
---

<Layout title={t('nav.about')}>
  <div class="max-w-3xl mx-auto py-12">
    <h1 class="text-4xl font-bold mb-8">{t('nav.about')}</h1>
    
    <div class="prose prose-invert prose-lg mb-12">
      <p>
        Hi, I'm a Game Designer with a passion for creating immersive systems and engaging gameplay loops. 
        With over 5 years of experience in the industry, I have worked on titles ranging from mobile RPGs to PC strategy games.
      </p>
      <p>
        My philosophy is simple: <strong>Player experience comes first.</strong> Whether I'm balancing an economy or scripting a boss fight, 
        I always ask myself how it serves the player's journey.
      </p>
    </div>

    <h2 class="text-2xl font-bold mb-6 border-b border-gray-800 pb-2">Skills</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      {skills.map(skillGroup => (
        <div>
          <h3 class="font-bold text-blue-400 mb-3">{skillGroup.category}</h3>
          <div class="flex flex-wrap gap-2">
            {skillGroup.items.map(item => (
              <span class="px-3 py-1 bg-gray-900 border border-gray-800 rounded text-sm text-gray-300">
                {item}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <h2 class="text-2xl font-bold mb-6 border-b border-gray-800 pb-2">Resume</h2>
    <div class="flex gap-4">
      <a href="/resume_en.pdf" class="flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white rounded-lg font-bold transition-colors">
        <span>Download Resume (EN)</span>
      </a>
      <a href="/resume_cn.pdf" class="flex items-center gap-2 px-6 py-3 bg-gray-800 hover:bg-gray-700 text-white rounded-lg font-bold transition-colors border border-gray-700">
        <span>下载简历 (CN)</span>
      </a>
    </div>
  </div>
</Layout>
